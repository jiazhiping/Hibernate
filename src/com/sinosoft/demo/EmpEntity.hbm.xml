<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.sinosoft.demo.EmpEntity" table="emp" schema="use">
        <id name="empid" column="EMPID">
           <generator class="native"></generator>
        </id>
        <property name="empcode">
            <column name="EMPCODE" sql-type="varchar(32)" length="32"/>
        </property>
        <property name="empname">
            <column name="EMPNAME" sql-type="varchar(64)" length="64" not-null="true"/>
        </property>
        <property name="sex">
            <column name="SEX" sql-type="varchar(1)" length="1" not-null="true"/>
        </property>

        <property name="postcode">
            <column name="POSTCODE" sql-type="char(6)" length="6" not-null="true"/>
        </property>
        <property name="address">
            <column name="ADDRESS" sql-type="varchar(128)" length="128" not-null="true"/>
        </property>
        <property name="phone">
            <column name="PHONE" sql-type="varchar(32)" length="32" not-null="true"/>
        </property>
        <property name="wage">
            <column name="WAGE" sql-type="double(6,1)" precision="6" scale="1" not-null="true"/>
        </property>

        <many-to-one name="orgEntity" class="com.sinosoft.demo.OrgEntity" column="orgid"/>
    </class>
</hibernate-mapping>